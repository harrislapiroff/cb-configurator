{
	"manifest_version": 3,
	"version": "0.2",
	"name": "Caller's Box Configurator",
	"description": "Replaces gendered dance terminology on the Caller's Box website with gender-neutral alternatives.",
	"icons": {
		"48": "icons/color-box-48.png",
		"96": "icons/color-box-96.png",
		"128": "icons/color-box-128.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*.ibiblio.org/contradance/thecallersbox/dance.php?id=*"],
			"js": ["maps.js", "main.js"],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html"
	},
	"action": {
		"default_icon": {
			"48": "icons/color-box-48.png",
			"96": "icons/color-box-96.png"
		},
		"default_popup": "options.html",
		"default_title": "Caller's Box Configurator"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "callersboxconfigurator@chromamine.com",
			"strict_min_version": "109.0"
		}
	},
	"permissions": ["storage"]
}
